<% layout('boilerplate') %>

<div class="container-fluid">
  <h3 class="text-dark mb-1">Add New Weapon</h3>
</div>

<form class="shadow-sm" style="margin: 38px;margin-top: 29px;padding: 26px;" action="/weapons/create" method="post" enctype="multipart/form-data">

  <input class="form-control" name="weaponName" type="text" placeholder="Weapon Name">

  <input class="form-control" name="weaponAmount" type="number" placeholder="Weapon Amount" style="margin-top: 39px;">

  <input class="form-control" name="weaponSerialNumber" type="text" placeholder="Weapon Serial Number" style="margin-top: 39px;">

  <input class="form-control" name="additionalFiles" type="file"  style="margin-top: 39px;" multiple>

  <button  class="btn btn-primary" data-bs-hover-animate="pulse" type="submit" style="margin-top: 40px;"><i class="fa fa-plus"></i>&nbsp;ADD</button>
</form>

</div>
</div>\
