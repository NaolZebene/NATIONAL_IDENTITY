<% layout('boilerplate') %>

<form class="shadow-sm" style="margin: 38px;margin-top: 29px;padding: 26px;" action="/crimes/<%= crime._id %>" method="post" novalidate>
  <input class="form-control" name="fileNumber" type="text" value="<%= crime.fileNumber %>"  placeholder="File Number" required>

  <input class="form-control" name="criminalName" type="text" placeholder="Criminal Name" value="<%= crime.criminalName %>" style="margin-top: 39px;" required>


  <input class="form-control" name="crimeCommittedPlace" type="text" placeholder="Crime Committed Place" style="margin-top: 39px;" value="<%= crime.crimeCommittedPlace %>" required>

  <input class="form-control" name="criminalIdNumber" type="text" placeholder="Crime Committed Place" style="margin-top: 39px;" value="<%= crime.criminalIdNumber %>" required>


  <input class="form-control" name="crimeType" type="text" placeholder="Crime Type" style="margin-top: 39px;" value="<%= crime.crimeType %>" required>

  <input class="form-control" name="victimName" type="text" value="<%= crime.victimName %>" placeholder="Victim Name" style="margin-top: 39px;"  >

  <input class="form-control" name="victimId" type="text" placeholder="Victim ID" style="margin-top: 39px;" value="<%= crime.victimId %>">

  <input class="form-control" name="fingerPrint" type="text" placeholder="Finger Print" style="margin-top: 39px;" value="<%= crime.fingerPrint %>">

  <input class="form-control" name="additionalFiles" type="file" placeholder="Additional Files" style="margin-top: 39px;" multiple>


  <div class="form-group">
    <label for="exampleFormControlTextarea1">Crime Description</label>
    <textarea class="form-control" name="crimeDescription" id="exampleFormControlTextarea1" rows="3" required><%= crime.crimeDescription %></textarea>
  </div>

  <button class="btn btn-primary" data-bs-hover-animate="pulse" type="submit" style="margin-top: 40px;"><i class="fa fa-plus"></i>&nbsp;ADD</button>
</form>

