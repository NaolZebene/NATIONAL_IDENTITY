<% layout('boilerplate') %>

<div class="container-fluid">
  <h3 class="text-dark mb-1">Add New Crime</h3>
</div>

<form class="shadow-sm" style="margin: 38px;margin-top: 29px;padding: 26px;" action="/crimes/create" method="post">
  <input class="form-control" name="fileNumber" type="text" placeholder="File Number">

  <input class="form-control" name="criminalName" type="text" placeholder="Criminal Name" style="margin-top: 39px;">

  <input class="form-control" name="criminalIdNumber" type="text" placeholder="Criminal ID Number" style="margin-top: 39px;">

  <input class="form-control" name="crimeCommittedPlace" type="text" placeholder="Crime Committed Place" style="margin-top: 39px;">


  <div class="form-group">
    <label for="exampleFormControlTextarea1">Crime Description</label>
    <textarea class="form-control" name="crimeDescription" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

  <input class="form-control" name="crimeType" type="text" placeholder="Crime Type" style="margin-top: 39px;">
  <input class="form-control" name="victimName" type="text" placeholder="Victim Name" style="margin-top: 39px;">
  <input class="form-control" name="victimId" type="text" placeholder="Victim ID" style="margin-top: 39px;">
  <input class="form-control" name="fingerPrint" type="text" placeholder="Finger Print" style="margin-top: 39px;">
  <input class="form-control" name="additionalFiles" type="file" placeholder="Additional Files" style="margin-top: 39px;" multiple>

  <button class="btn btn-primary" data-bs-hover-animate="pulse" type="submit" style="margin-top: 40px;"><i class="fa fa-plus"></i>&nbsp;ADD</button>
</form>

</div>
</div>\
<a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i>
</a>
</div>