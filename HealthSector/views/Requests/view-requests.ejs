
<% layout('boilerplate') %> 

<div id="content-1">
    <div class="container-fluid">
        <h3 class="text-dark mb-4"> Requests </h3>
        <div class="card shadow">
            <!-- <div class="card-header py-3">
                <p class="text-primary m-0 font-weight-bold">All Employees  Info</p>
            </div> -->
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 text-nowrap">
                        <a class="btn btn-outline-primary" href="/requests/create">Create New</a>
                    </div>
                    <div class="col-md-6">
                        <div class="text-md-right dataTables_filter" id="dataTable_filter"><label><input type="search" class="form-control form-control-sm" aria-controls="dataTable" placeholder="Search"></label></div>
                    </div>
                </div>
                <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                    <table class="table my-0" id="dataTable">
                        <thead>
                            <tr>
                                <th>Id Number</th> 
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                            <% for(data of requests){ %>
                                 <td><%= data.idNumber %> </td>
                                 <td><a class="btn btn-warning" href="/requests/doctoredit/<%= data._id %>/">Start Session</a></td>
                            <td><form action="/request/delete/<%=data._id%>" method="GET" style="display: inline-block;">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form></td>

                            </tr>
                          
                            <% } %> 
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
</div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a></div>